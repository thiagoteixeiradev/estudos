@page
@model RazorFilmes.Pages.Filmes.IndexModel
@{
    ViewData["Title"] = "Página Principal";
}


<h1>Index</h1>


<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Gênero: <select asp-for="BuscaGenero2" asp-items="Model.BuscaListaGenero">
        <option value ="">Todos</option></select>

        Titulo: <input type="text" asp-for="BuscaTitulo" />
        <input type="submit" value="Filtrar"/>
        
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Lancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme[0].Preco)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Filme[0].Classificacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Filme) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lancamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Classificacao)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
